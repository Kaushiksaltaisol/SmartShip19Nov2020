
@{
    Layout = null;
    string imagepath = "/assets/images/";
}

<!DOCTYPE html>

<html lang="en">
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Login</title>

    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="~/assets/css/bootstrap.min.css">
    
    <link href="https://fonts.googleapis.com/css2?family=Lato:wght@400;700&display=swap" rel="stylesheet">

    <link href="/assets/css/stylesheet.css" rel="stylesheet" />
    <link href="~/assets/css/jquery-ui.css" rel="stylesheet" />
    @*<link rel="stylesheet" href="~/assets/css/intlTelInput.css">*@

    @*<script src="~/assets/js/jquery-1.12.4.js"></script>*@
    <script src="~/assets/js/jquery-ui.js"></script>
    <script src="~/assets/js/jquery-3.2.1.js"></script>
    <script src="~/assets/js/jquery.slimscroll.js"></script>
    <script src="~/assets/js/popper.min.js"></script>
    <script src="~/assets/js/bootstrap.min.js"></script>
    @*<script src="~/assets/js/intlTelInput.js"></script>*@


    


</head>
<body class="login">
    <div class="container-fluid p-0">
        <div class="row no-gutters">
            <div class="col-md-6">
                <div class="login-banner"></div>
            </div>
            <div class="col-md-6">
                <div class="login-form">
                    @using (Html.BeginForm("LoginPost", "Login", FormMethod.Post, new { @class = "form", enctype = "multipart/form-data" }))
                    {
                    <div class="logo">
                        <img src="@string.Concat(imagepath, "Logo.svg")">
                    </div>
                        <h2>Let’s get started!</h2>
                        <div class="form-group">
                            <label>Username</label>
                            <input type="text" placeholder="Enter Username" class="form-control username">
                        </div>
                        <div class="form-group">
                            <label>Password</label>
                            <input type="password" placeholder="Enter Password" class="form-control password">

                        </div>
                        <div class="form-group row no-gutters login-options">
                            <div class="col-md-6">
                                <label class="login-remember">
                                    Remember me
                                    <input type="checkbox">
                                    <span class="checkmark"></span>
                                </label>
                            </div>
                            <div class="col-md-6 text-right">
                                <a href="#!" class="forgot-lnk">Forgot your password?</a>
                            </div>

                        </div>
                        <div class="form-group button-group">
                            <button type="submit" class="btn btn-primary">Sign In</button>
                        </div>
                        <div class="new-user">Don’t have an account?<a href="#!">Register</a></div>

                    }
                    </div>
            </div>
        </div>
    </div>

    
</body>
</html>
