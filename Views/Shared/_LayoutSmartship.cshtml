<!DOCTYPE html>
@{ 

    string imagepath = "/assets/images/";
}
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="~/assets/css/bootstrap.min.css">
    <link href="https://fonts.googleapis.com/css2?family=Lato:wght@400;700&display=swap" rel="stylesheet">
    <link href="/assets/css/stylesheet.css" rel="stylesheet" />
    <link href="~/assets/css/jquery-ui.css" rel="stylesheet" />
    @*<link rel="stylesheet" href="~/assets/css/intlTelInput.css">*@

    <script src="~/assets/js/jquery-1.12.4.js"></script>
    <script src="~/assets/js/jquery-ui.js"></script>
    @*<script src="~/assets/js/jquery-3.2.1.js"></script>*@
    <script src="~/assets/js/jquery.slimscroll.js"></script>
    <script src="~/assets/js/popper.min.js"></script>
    <script src="~/assets/js/bootstrap.min.js"></script>
    @*<script src="~/assets/js/intlTelInput.js"></script>*@


</head>
<body>

    <div class="app-wrapper">
        <div class="header">
            <div class="logo"> <img src="@string.Concat(imagepath, "Logo.svg")"></div>
            <div class="topbar">
                <div class="search">
                    <input type="text" class="form-control" placeholder="Search">
                    <input type="button" class="search-btn">
                </div>
                <div class="notification">
                    <img src="assets/images/Notification.svg">
                    <span></span>
                </div>
                <div class="user-profile">
                    <img src="assets/images/user-profile.png">
                    <div class="user-name">Roman El Najjar</div>
                </div>
            </div>

        </div>
        <div class="content-wrapper d-flex">
            <div class="side-nav-bar">
                <div class="nav">
                    <ul>
                        <li class="dashboard"><a href="#">Dashboard</a></li>
                        <li class="customer active"><a href="#">Customers</a></li>
                        <li class="product "><a href="#">Products</a></li>
                        <li class="finance"><a href="#">Finance</a></li>
                        <li class="shipment"><a href="#">Shipment</a></li>
                        <li class="promo"><a href="#">Promo Codes</a></li>
                        <li class="reports"><a href="#">Reports</a></li>
                    </ul>
                </div>
                <a href="#!" class="logout-btn">Logout</a>
            </div>
            <div class="content">
                @RenderBody()
            </div>
        </div>


    </div>
    
   


</body>
</html>
